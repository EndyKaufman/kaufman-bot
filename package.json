{
  "name": "kaufman-bot",
  "version": "1.4.0-alpha.0",
  "description": "A simple bot for Telegram and Skype",
  "repository": "https://github.com/EndyKaufman/kaufman-bot.git",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "start:dev": "nodemon --exec ts-node ./src/bin/app.ts --watch src --ext .ts",
    "start": "npm run build && npm run serve",
    "serve": "node ./dist/bin/app -s",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --pretty",
    "test": "npm run lint && npm run build && mocha --timeout 15000 --require ts-node/register --recursive src/**/*.spec.ts",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "generate": "export $(cat ./.env | grep -Ev '(#.*$)|(^$)') && npm run k8s:generator:run-all-env && npm run lint:fix",
    "ci:generate": "npm run k8s:generator:run-all-env",
    "docker:dev:up": ". ./env/local.env.sh && ./docker/dev/docker-compose-up.sh",
    "docker:dev:down": ". ./env/local.env.sh && ./docker/dev/docker-compose-down.sh",
    "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev:up",
    "docker:prod:up": "npm run build &&./docker/prod/docker-compose-up.sh",
    "docker:prod:down": "./docker/prod/docker-compose-down.sh",
    "docker:prod:restart": "npm run docker:prod:down && npm run docker:prod:up",
    "docker:prod:build": "npm run build && ./docker/prod/docker-compose-build.sh",
    "docker:prod-local:up": ". ./env/local.env.sh && npm run docker:prod:up",
    "docker:prod-local:down": ". ./env/local.env.sh && npm run docker:prod:down",
    "docker:prod-local:restart": ". ./env/local.env.sh && npm run docker:prod:restart",
    "docker:prod-local:test-build": "npm run docker:prod-local:down && npm run generate && npm run docker:prod-local:up && sleep 15",
    "docker:prod-local:test": "npm run docker:prod-local:test-build && bash ./docker/test.sh",
    "k8s:generator:run": "node ./k8s/generators/generator.js",
    "k8s:generator:run-all-env": "npm run k8s:generator:run-local-env && npm run k8s:generator:run-prod-env",
    "k8s:generator:run-local-env": ". ./env/local.env.sh && node ./k8s/generators/generator.js",
    "k8s:generator:run-prod-env": ". ./env/prod.env.sh && node ./k8s/generators/generator.js",
    "k8s:local:delete": "microk8s kubectl delete namespace kaufman-local",
    "k8s:local:build-images": ". ./env/local.env.sh && npm run generate && npm run build:local && ./k8s/build-images.sh",
    "k8s:local:apply": ". ./env/local.env.sh && npm run k8s:generator:run && ./k8s/import-local-images.sh && ./k8s/apply.sh",
    "k8s:prod:delete": "microk8s kubectl delete namespace kaufman-prod",
    "k8s:prod:build-images": ". ./env/prod.env.sh && npm run generate && npm run build:prod && ./k8s/build-images.sh",
    "k8s:prod:apply": ". ./env/prod.env.sh && npm run k8s:generator:run && ./k8s/import-images.sh && ./k8s/apply.sh",
    "k8s:dashboard": "/snap/bin/microk8s dashboard-proxy",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha && git push --tags origin && git push --all origin",
    "release:alpha-silent": "npm run release:alpha &> /dev/null",
    "scripts:build": "npm run tsc --  ./k8s/generators/*.ts",
    "postinstall": "npm run scripts:build && npm run generate"
  },
  "author": {
    "name": "EndyKaufman",
    "email": "admin@site15.ru"
  },
  "main": "dist/bin/app.js",
  "typings": "dist/bin/app.d.ts",
  "bin": {
    "kaufman-bot": "bin/kaufman-bot"
  },
  "files": [
    "bin",
    "dist"
  ],
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.14",
    "@types/cheerio": "^0.22.23",
    "@types/commander": "^2.12.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.167",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.19.14",
    "@types/request": "^2.48.5",
    "@types/sinon": "^7.5.2",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-commits-detector": "^1.0.3",
    "conventional-recommended-bump": "^6.1.0",
    "json-stringify-safe": "^5.0.1",
    "mocha": "^6.2.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "sinon": "^7.5.0",
    "standard-version": "^9.1.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.1.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "yaml": "^1.10.0"
  },
  "dependencies": {
    "apiai": "^4.0.3",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "botbuilder": "^4.11.0",
    "charset": "^1.0.1",
    "cheerio": "^1.0.0-rc.5",
    "commander": "^7.0.0",
    "console-stamp": "^0.2.9",
    "dialogflow": "^0.12.2",
    "dotenv": "^8.2.0",
    "encoding": "^0.1.13",
    "express": "^4.17.1",
    "forever-monitor": "^1.7.2",
    "googleapis": "^44.0.0",
    "html-to-text": "^5.1.1",
    "iconv-lite": "^0.5.2",
    "jschardet": "^2.2.1",
    "kubernetes-types": "^1.17.0-beta.1",
    "lodash": "^4.17.20",
    "node-telegram-bot-api": "^0.30.0",
    "request": "^2.88.2",
    "rollbar": "^2.19.4",
    "wikijs": "^6.0.1",
    "wtf_wikipedia": "^7.8.1"
  }
}
